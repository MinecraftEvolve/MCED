{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "../../dist",
    "rootDir": "..",
    "baseUrl": "../..",
    "paths": {
      "@shared/*": ["src/shared/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowJs": true
  },
  "include": ["**/*", "../shared/**/*"],
  "exclude": ["../../node_modules", "../../dist"]
}
